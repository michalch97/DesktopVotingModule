<Page x:Class="DesktopVotingModule.MenuPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:DesktopVotingModule"
      xmlns:vm="clr-namespace:DesktopVotingModuleViewModel;assembly=DesktopVotingModuleViewModel"
      mc:Ignorable="d" 
      d:DesignHeight="416.8" d:DesignWidth="544"
      Title="Menu">
    <Page.Resources>
        <vm:MenuViewModel x:Key="menuView"/>
    </Page.Resources>
    <Grid DataContext="{StaticResource menuView}">

        <Button Content="Chcę zagłosować" Command="{Binding GoToVotePageCommand}" CommandParameter="{Binding ElementName=Page}" Foreground="#FF231F20" FontFamily="Sitka Banner" FontSize="28" FontWeight="Bold" Margin="64,66,64,231" Background="#FFA43434" BorderBrush="#FF830A0A"/>
        <Button Content="Chcę wyświetlić wyniki" Command="{Binding GoToVoteResultCommand}" CommandParameter="{Binding ElementName=Page}" Background="#FFA43434" Foreground="#FF231F20" FontFamily="Sitka Banner" FontSize="28" FontWeight="Bold" Margin="64,233,64,64" BorderBrush="#FF830A0A"/>

    </Grid>
</Page>

