<Page x:Class="DesktopVotingModule.AfterVotePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:DesktopVotingModule"
      xmlns:vm="clr-namespace:DesktopVotingModuleViewModel;assembly=DesktopVotingModuleViewModel"
      mc:Ignorable="d" 
      d:DesignHeight="416.8" d:DesignWidth="544"
      Title="VotingPage">
    <Page.Resources>
        <vm:VoteViewModel x:Key="voteView"/>
    </Page.Resources>
    <Grid>
        <Label>
            <TextBox Text="Dziękujemy za oddanie głosu!"/>
        </Label>

        <Button Content="Głosuj" Command="{Binding VoteCandidateCommand}" CommandParameter="{Binding ElementName=Page}" Background="DarkGray" Foreground="#231F20" FontFamily="Sitka Banner" FontSize="20" FontWeight="Bold" Margin="162,364,162,10"/>

        <!--Widok strony z głosowaniem-->
    </Grid>
</Page>

